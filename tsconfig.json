{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build-tsc",
    "lib": [ "dom", "es5", "es6" ],
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    // "outFile": "./build-tsc/web-sdk.js",
    "sourceMap": true,
    "esModuleInterop": true,
    // "strict": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}